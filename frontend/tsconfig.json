{
    "compilerOptions": {
        "baseUrl": "src",
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "lib": ["es6", "es7", "dom"],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "paths": {
            "@app/*": ["./app/*"]
        },
        "removeComments": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"],
    },
    "include": ["src/app/**/*.ts", "src/app/**/*.tsx", "node_modules/@types/**/*.d.ts", "types/**/*.d.ts"],
    "exclude": ["dist"]
}