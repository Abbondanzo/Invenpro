{
    "compilerOptions": {
        "target": "es5",
        "moduleResolution": "node",
        "module": "es6",
        "jsx": "react",
        "lib": ["dom", "es6", "es2017", "dom.iterable", "scripthost"],
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["app/*"]
        },
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "outDir": "dist",
        "declaration": false,
        "removeComments": true,
        "strict": true,
        "typeRoots": ["node_modules/@types"]
    },

    "files": ["src/main.tsx"],
    "include": ["app/**/*.ts", "app/**/*.tsx", "node_modules/@types/**/*.d.ts"],
    "exclude": ["dist"]
}